<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_for_password_dialog_drawable">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:padding="10dp"
            android:background="@color/purple_juan"/>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:background="?android:attr/listDivider"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/would_you_change_password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:padding="10dp"
            android:background="@color/my_background" />
        <EditText
            android:id="@+id/enter_new_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:minLines="1"
            android:maxLines="1"
            android:maxLength="50"
            android:minWidth="20dp"
            android:maxWidth="200dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@color/clear_purple_juan"
            android:hint="@string/enter_new_password"/>
        <EditText
            android:id="@+id/reenter_new_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:minLines="1"
            android:maxLines="1"
            android:maxLength="50"
            android:minWidth="20dp"
            android:maxWidth="200dp"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:background="@color/clear_purple_juan"
            android:hint="@string/reenter_new_password"/>
        <CheckBox
            android:id="@+id/checkbox_password_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_visible_string"
            android:shadowColor="@color/black"
            android:enabled="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/border_for_views_drawable"
            android:text="@android:string/cancel"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/border_for_views_drawable"
            android:text="@android:string/ok"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal" />
    </RelativeLayout>
